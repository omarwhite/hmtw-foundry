<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Talents'}}</div>
    <div class='item-info'>{{localize 'XP'}}</div>
    <div class='item-info'>{{localize 'Mastered?'}}</div>
    <div class='item-info'>{{localize 'Wounded?'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create talent'
        data-type='talent'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='talent'}}
      </a>
    </div>
  </li>
  {{#each talents as |talent id|}}
    <li class='item' data-item-id='{{talent._id}}'>
      <div class='flexrow'>
        <div class='item-name'>
          <div class='item-image'>
            <img
              src='{{talent.img}}'
              title='{{talent.name}}'
              width='24'
              height='24'
            />
          </div>
          <h4>{{talent.name}}</h4>
        </div>
        <div class='item-info item-prop'>
          <span>{{talent.system.path.xpspent}}</span>
        </div>
        <div class='item-info item-prop'>
          <input type='checkbox' name='system.path.mastered' {{isChecked talent.system.path.mastered}} disabled="disabled" />
        </div>
        <div class='item-info item-prop'>
          <input type='checkbox' name='system.wounded' {{isChecked talent.system.wounded}} disabled="disabled" />
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='Talent'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='Talent'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </div>
      <div class='flexrow view-edit'>
        {{
          editor
          talent.system.description
          target='talent.system.description'
          engine='prosemirror'
          button=false
          editable=false
        }}
      </div>
    </li>
  {{/each}}
</ol>