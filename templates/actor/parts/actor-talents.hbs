<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Talents'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create talent'
        data-type='talent'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='talent'}}
      </a>
    </div>
  </li>
  {{#each talents as |talent id|}}
    <li class='item flexrow' data-item-id='{{talent._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <img
            src='{{talent.img}}'
            title='{{talent.name}}'
            width='24'
            height='24'
          />
        </div>
        <h4>{{talent.name}}</h4>
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='Talent'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='Talent'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>