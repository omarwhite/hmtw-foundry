<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create bond'
        data-type='bond'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='bond'}}
      </a>
    </div>
  </li>
  {{#each bonds as |bond id|}}
    <li class='item flexrow' data-item-id='{{bond._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{talent.img}}'
              title='{{talent.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{bond.name}}</h4>
        {{!-- <p>{{bond.description}}</p> --}}
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Edit" type='bond'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='bond'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>