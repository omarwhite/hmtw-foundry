<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>Bonds</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create bond'
        data-type='bond'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='bond'}}
      </a>
    </div>
  </li>
  {{#each bonds as |bond id|}}
    <li class='item flexrow' data-item-id='{{bond._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <img
              src='{{bond.img}}'
              title='{{bond.name}}'
              width='24'
              height='24'
          />
        </div>
        <h4>{{bond.name}}</h4>
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='Bond'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='Bond'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>