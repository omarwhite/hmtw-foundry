<form class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <img
      class='profile-img'
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
    />
    <div class='header-fields'>
      <h1 class='charname'>
        <input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Name'
        />
      </h1>
      <div class='grid grid-3col'>
        <div class='resource'>
          <label class='resource-label'>XP:</label>
          <input type='number' name='system.path.xpspent' value="{{system.path.xpspent}}" data-dtype="Number" />
        </div>
        <div class='resource'>
          <label class='resource-label'>Mastered:</label>
          <input type='checkbox' name='system.path.mastered' {{isChecked system.path.mastered}} />
        </div>
        <div class='resource'>
          <label class='resource-label'>Wounded:</label>
          <input type='checkbox' name='system.wounded' {{isChecked system.wounded}} />
        </div>
      </div>
    </div>
  </header>

  {{! Sheet Body }}
  <section class='sheet-body'>
    {{
      editor
      enrichedDescription
      target='system.description'
      engine='prosemirror'
      button=true
      editable=editable
    }}
  </section>
</form>